{
  "name": "@themed-styling/core",
  "version": "1.2.0",
  "description": "Quick, modular and responsive styling for styled-components with theme support",
  "main": "dist/core.cjs.js",
  "type": "module",
  "module": "dist/core.esm.js",
  "scripts": {
    "doc": "jsdoc -r src -d docs",
    "build": "rollup -c",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/themed-styling/core.git"
  },
  "keywords": [
    "styled-components",
    "theme",
    "theming",
    "style",
    "styled",
    "react",
    "components",
    "responsive"
  ],
  "author": "aptt <a@ptt.li>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/themed-styling/core/issues"
  },
  "homepage": "https://github.com/themed-styling/core#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@std/esm": "^0.26.0",
    "@styled-system/theme-get": "^5.1.2",
    "babel-jest": "^26.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jsdoc": "^3.6.4",
    "prettier": "^2.0.5",
    "rollup": "^2.8.2"
  },
  "peerDependencies": {
    "@styled-system/theme-get": "^5.1.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
